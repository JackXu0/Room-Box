<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wingsoloar.com.xjtlu_rooms">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="Room Box"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.All_rooms_activity"/>
        <activity android:name=".Activities.Room_info_activity"/>
        <activity android:name=".Activities.Record_thoughts_activity"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".Activities.Footprints_activity"/>
        <activity android:name=".Activities.My_rooms_activity"/>
        <activity android:name=".Activities.Index_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Room_stories_activity"/>
        <activity android:name=".Activities.Personal_information_activity"/>
        <activity android:name=".Activities.Name_setting_activity"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".Activities.Gender_setting_activity"/>
        <activity android:name=".Activities.Major_setting_activity"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".Activities.MyThoughts_activity"/>

    </application>

</manifest>